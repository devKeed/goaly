<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pie_widget_bg"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/pie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pie Program"
        android:textColor="#EAF5FF"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pie_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="No task"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pie_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0m"
        android:textColor="#D7E7FF"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/pie_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="12dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#4DD0E1"
        android:progressBackgroundTint="#355A86" />

</LinearLayout>
